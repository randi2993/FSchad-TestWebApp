@model List<FSchad.Models.CustomerTypesVM>
@Html.ValidationSummary()
@{
    ViewData["Title"] = "Customer Type Page";
}

<div class="text-center">
    <h3 class="display-4">Customer Type Maintenance</h3>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            <p>@ViewBag.ErrorMessage</p>
        </div>
    }
</div>
<br />
<br />

<div class="row">
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-body">
                <h4>Add</h4>
                <hr>
                <form asp-action="Create" method="post">
                    <div class="form-group">
                        <label for="Description" class="control-label">Description:</label>
                        <input name="Description" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Insert" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <div class="text-center">
                    <h4>List</h4>
                    <hr>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <td>Id</td>
                                <td>Description</td>
                                <td>Action</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var element in Model)
                            {
                                <tr>
                                    <td>@element.Id</td>
                                    <td>@element.Description</td>
                                    <td>
                                        @using (Html.BeginForm("Update", "CustomerType", new { element }))
                                        {
                                            @Html.AntiForgeryToken()

                                            <div class="form-actions no-color">
                                                <input type="submit" value="Update" class="btn btn-warning" />
                                            </div>
                                        }
                                        @using (Html.BeginForm("Delete", "CustomerType", new { id = element.Id }))
                                        {
                                            @Html.AntiForgeryToken()

                                            <div class="form-actions no-color">
                                                <input type="submit" value="Delete" class="btn btn-danger" />
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
